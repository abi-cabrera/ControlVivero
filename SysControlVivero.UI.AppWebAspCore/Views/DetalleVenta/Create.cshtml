@model SysControlVivero.EntidadesDeNegocio.DetalleVenta

@{
    ViewData["Title"] = "Create";
}

<h1>Crear DetalleVenta</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdDetalleVenta" class="control-label"></label>
                <input asp-for="IdDetalleVenta" class="form-control" />
                <span asp-validation-for="IdDetalleVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descuento" class="control-label"></label>
                <input asp-for="Descuento" class="form-control" />
                <span asp-validation-for="Descuento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaDePago" class="control-label"></label>
                <input asp-for="FormaDePago" class="form-control" />
                <span asp-validation-for="FormaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VentaNoSujeta" class="control-label"></label>
                <input asp-for="VentaNoSujeta" class="form-control" />
                <span asp-validation-for="VentaNoSujeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VentaExenta" class="control-label"></label>
                <input asp-for="VentaExenta" class="form-control" />
                <span asp-validation-for="VentaExenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Cancelar</a>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
            </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
